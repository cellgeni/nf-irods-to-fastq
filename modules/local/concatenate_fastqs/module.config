process {
    withName: '.*CONCATENATE_FASTQS' {
        array = 30
        cpus = 1
        memory = 2.GB
        queue = 'normal'
        errorStrategy = 'retry'
        maxRetries = 3
        publishDir = [
            mode: params.publish_mode,
            path: "${params.output_dir}/"
        ]
    }
}